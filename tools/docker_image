FROM ubuntu:18.04

WORKDIR root/project
THIRD_PARTY_DIR root/third_party

ADD . $PROJECT_ROOT

RUN apt update
RUN apt install -y g++
RUN apt install -y cmake
RUN apt install -y clang-format-6.0

RUN apt install -y git

RUN cd $THIRD_PARTY_DIR & git clone git://github.com/google/googletest & mkdir googletest/build & cd googletest/build & cmake ..  & make & make install
