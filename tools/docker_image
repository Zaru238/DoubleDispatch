FROM ubuntu:18.04

WORKDIR root/project

ADD . $PROJECT_ROOT

RUN apt update
RUN apt install -y g++
RUN apt install -y cmake
RUN apt install -y clang-format-6.0

RUN apt install -y git

RUN git clone git://github.com/google/googletest 
RUN ls
RUN mkdir googletest/build
RUN ls googletest
RUN cd googletest/build & cmake .. 
RUN cd googletest/build & make & make install


